# GitHub Authentication
# Generate at: https://github.com/settings/tokens
# Required scopes: repo, read:org, workflow
GITHUB_TOKEN=ghp_your_token_here

# Anthropic API Key (for AI-powered features)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your_key_here

# Miyabi Configuration
MIYABI_AUTO_ISSUE_CREATE=true
MIYABI_AUTO_PR_CREATE=true
MIYABI_AGENT_CONCURRENCY=2

# Requirements MCP Server Configuration
REQUIREMENTS_DATA_DIR=./data
REQUIREMENTS_AUTO_VALIDATION=true
REQUIREMENTS_AUTO_FIX=true
REQUIREMENTS_FIX_MODE=strict

# Web Viewer Configuration
VIEW_SERVER_PORT=5002
VIEW_AUTO_REFRESH_INTERVAL=5000

# Logging
LOG_LEVEL=info
DEBUG=false
